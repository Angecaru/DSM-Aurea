<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="Diagrama_aureaGen.Infraestructure"
		                   namespace="Diagrama_aureaGen.Infraestructure.EN.Diagrama_aurea">
		    
		    
			
				<class name="ProductoNH" table="Producto"> 
						<id name="IdProducto" column="idProductoProducto"/> 
			
					
					<property name="Nombre" type="string"> 
						<column name="nombre"  not-null="true"/>
					</property>
					<property name="Descripcion" type="string"> 
						<column name="descripcion"  not-null="true"/>
					</property>
					<property name="Precio" type="float"> 
						<column name="precio"  not-null="true"/>
					</property>
					<property name="Stock" type="integer"> 
						<column name="stock"  not-null="true"/>
					</property>
					<property name="Material" type="string"> 
						<column name="material"  not-null="true"/>
					</property>
					<property name="Imagen" type="string"> 
						<column name="imagen"  not-null="true"/>
					</property>
					<property name="Etiquetas" type="string"> 
						<column name="etiquetas"  not-null="true"/>
					</property>
					<property name="EmailCliente" type="string"> 
						<column name="emailCliente"  not-null="true"/>
					</property>
					<property name="Fecha" type="date"> 
						<column name="fecha"  not-null="true"/>
					</property>
					<property name="MetodoPago" type="string"> 
						<column name="metodoPago"  not-null="true"/>
					</property>
					<property name="DatosTarjeta" type="string"> 
						<column name="datosTarjeta"  not-null="true"/>
					</property>
					<property name="Direccion" type="string"> 
						<column name="direccion"  not-null="true"/>
					</property>
			
			
			
		  			
						<bag name="Incluido_en" >
							<key>
							
								
								<column name="FK_idProductoProducto_idProducto"/>
					      	</key>
							<one-to-many class="Diagrama_aureaGen.Infraestructure.EN.Diagrama_aurea.DetallePedidoNH"/>
					    </bag>
					
			
		  			
						<bag name="ProductoCarrito" >
							<key>
							
								
								<column name="FK_idProductoProducto_idProducto"/>
					      	</key>
							<one-to-many class="Diagrama_aureaGen.Infraestructure.EN.Diagrama_aurea.ProductoCarritoNH"/>
					    </bag>
					
			
		  			
						<many-to-one name="Categoria" class="Diagrama_aureaGen.Infraestructure.EN.Diagrama_aurea.CategoriaNH" >	
								<column name="FK_idCategoriaCategoria_idCategoria"/> 
						</many-to-one>
											 					
			
		  			
						<many-to-one name="DeTemporada" class="Diagrama_aureaGen.Infraestructure.EN.Diagrama_aurea.DeTemporadaNH" >	
								<column name="FK_idTemporadaDeTemporada_idDeTemporada"/> 
						</many-to-one>
											 					
			
		  			
						<many-to-one name="Favorito" class="Diagrama_aureaGen.Infraestructure.EN.Diagrama_aurea.FavoritoNH" >	
								<column name="FK_idFavoritoFavorito_idFavorito"/> 
						</many-to-one>
											 					
			
		  			
						<many-to-one name="Administrador" class="Diagrama_aureaGen.Infraestructure.EN.Diagrama_aurea.AdministradorNH" >	
								<column name="FK_codigoEmpresaAdministrador_idAdministrador"/> 
						</many-to-one>
											 					
			
			
			
			
			
			
			
			
			
			
			
			
			
		  			
						<bag name="Productos_devueltos" >
							<key>
							
								
								<column name="FK_idProductoProducto_idProducto"/>
					      	</key>
							<one-to-many class="Diagrama_aureaGen.Infraestructure.EN.Diagrama_aurea.DevolucionNH"/>
					    </bag>
					
					
					
					
					
					
					
					
					
					
					
					
					
					
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="ProductoNHReadAllHQL">from ProductoNH</query>
		</hibernate-mapping>
	