						<bag name="Guarda" >
							<key>
							
								
								<column name="FK_idUsuarioUsuario_idUsuario"/>
					      	</key>
							<one-to-many class="Diagrama_aureaGen.Infraestructure.EN.Diagrama_aurea.FavoritoNH"/>
					    </bag>
					
			
		  			
						<bag name="Posee" >
							<key>
							
								
								<column name="FK_idUsuarioUsuario_idUsuario"/>
					      	</key>
							<one-to-many class="Diagrama_aureaGen.Infraestructure.EN.Diagrama_aurea.MetodoPagoNH"/>
					    </bag>
					
			
			
			
			
			
			
			
					
					
					
					
					
					
					
					
					
					
					
					
		
