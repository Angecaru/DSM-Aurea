						<column name="tipo"  not-null="true"/>
					</property>
					<property name="EsPredeterminado" type="boolean"> 
						<column name="esPredeterminado"  not-null="true"/>
					</property>
			
			
			
		  			
						<bag name="Pedido" >
							<key>
							
								
								<column name="FK_idMetodoMetodoPago_idUsa"/>
