						<column name="nombreCategoria"  not-null="true"/>
					</property>
					<property name="Descripcion" type="string"> 
						<column name="descripcion"  not-null="true"/>
					</property>
			
			
			
		  			
						<bag name="Pertenece" >
							<key>
							
								
								<column name="FK_idCategoriaCategoria_idCategoria"/>
					      	</key>
							<one-to-many class="Diagrama_aureaGen.Infraestructure.EN.Diagrama_aurea.ProductoNH"/>
